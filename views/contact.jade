extends layout

block content
 .container
  form(method='post', action='contact/send')
   h1 Обратная связь
   .form-group
    label Имя
    input.form-control(type='text', name='name', placeholder='Введите Имя')
   .form-group
    label Email
    input.form-control(type='email', name='email', placeholder='Введите Email')
   .form-group
    label Сообщение
    textarea.form-control(name='message', placeholder='Введите Сообщение')
   button.btn.btn-default(type='submit') Отправить
